#include <iostream>
using namespace std;
int main() {
    int n,a,b;
    cout<<"enter a number : ";cin>>a;
    cout<<"enter a number : ";cin>>b;
    cout<<"1. +  , 2. - ,  3. % ,  4. * ,  5. /"<<endl;
    cout<<"enter a operator : ";cin>>n;
    switch(n){
        case 1:
        cout<<"Addition is "<<(a+b);
        break;
        case 2:
        cout<<"Substraction is "<<(a-b);
        break;
        case 3:
        cout<<"Division is "<<(a%b);
        break;
        case 4:
        cout<<"Multiplication is "<<(a*b);
        break;
        case 5:
        cout<<"Mod is "<<(a/b);
        break;
    
    }

    return 0;
}
